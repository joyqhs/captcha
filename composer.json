{
    "name": "joyqhs/captcha",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "captcha"
    ],
    "description": "The Hyperf CAPTCHA package.",
    "authors": [
        {
            "name": "HengShan Qiao",
            "email": "qiaohengshan@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Joyqhs\\Captcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {

        }
    },
    "require": {
        "php": ">=8.0",
        "ext-fileinfo": "*",
        "ext-imagick": "*",
        "ext-swoole": ">=4.5",
        "joyqhs/encryption": "~3.0.0",
        "hyperf/cache": "~3.0.0",
        "hyperf/di": "~3.0.0",
        "hyperf/framework": "~3.0.0",
        "hyperf/validation": "~3.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/testing": "~3.0.0",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Joyqhs\\Captcha\\ConfigProvider"
        }
    }
}
